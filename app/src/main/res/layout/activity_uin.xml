<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/back1"
    android:id="@+id/layout"
    tools:context=".ActivityUin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kampus_uin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Universitas Islam Negeri Malang" />

        <TextView
            android:id="@+id/alamat_kampus_uin"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="Alamat: Jl. Gajayana No.50, Dinoyo, Kec. Lowokwaru, Kota Malang, Jawa Timur 65144"/>
        <Button
            android:id="@+id/location_kampus_uin"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="#E9967A"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Get Location" />
    </LinearLayout>

</RelativeLayout>